<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_weight="7"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#f6f6f6">

        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logopoder">

                </de.hdodenhof.circleimageview.CircleImageView>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="#f6f6f6">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:text="Mas Opciones"
            android:textAlignment="center"
            android:textColor="#070707"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="2dp"
        android:layout_weight="80"
        android:background="#f6f6f6"
        >



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/Icon_WebJus"
                                android:layout_width="43dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_web" />

                            <TextView
                                android:id="@+id/tv_WebJus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Web Judicial"
                                android:textAlignment="center"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/icon_Calendario"
                                android:layout_width="43dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_calendar" />

                            <TextView
                                android:id="@+id/tv_Calendario"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calendario Judicial"
                                android:textAlignment="center"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/icon_Encuesta"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_poll_24" />

                            <TextView
                                android:id="@+id/tv_Encuesta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Encuestas"
                                android:textAlignment="center"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/icon_Novedades"
                                android:layout_width="43dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_file_24" />

                            <TextView
                                android:id="@+id/tv_Archivos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Algunos Archivos"
                                android:textAlignment="center"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/icon_Tramites"
                                android:layout_width="43dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/recursos_humano" />

                            <TextView
                                android:id="@+id/tv_Tramites"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Solicitud de TrÃ¡mites"
                                android:textAlignment="center"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/icon_Companeros"
                                android:layout_width="43dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/usuarios"/>

                            <TextView
                                android:id="@+id/tv_Companeros"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CompaÃ±eros"
                                android:textAlignment="center"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>





            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff">

    </LinearLayout>/>
</LinearLayout>
