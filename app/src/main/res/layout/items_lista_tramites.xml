<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_file_24"></ImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tv_DescripcionLicencia_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion de la Licencia"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_NombreDelEMpleadoLicencia_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre apellido Empleado"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_FechaLicencia_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha De Licencia"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_EstadoLicencia_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado de Licencia"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>





</LinearLayout>
